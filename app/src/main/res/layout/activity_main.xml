<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Title Bar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:fontFamily="monospace"
        android:text="ROOT PRIVACY SWITCHER"
        android:textColor="#00FF41"
        android:textSize="20sp"
        android:letterSpacing="0.1"/>

    <!-- Main Toggle -->
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp">

        <Button
            android:id="@+id/btnToggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_inactive"
            android:fontFamily="monospace"
            android:text="INACTIVE"
            android:textColor="#FF3333"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Status Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <!-- DNS Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE DNS"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvDnsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Default"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Certs Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLOCKED CREDENTIALS"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvCertStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Terminal Log -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYSTEM LOG"
        android:textColor="#444444"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="> Ready."
            android:textColor="#00FF41"
            android:fontFamily="monospace"
            android:textSize="14sp"/>
    </ScrollView>

</LinearLayout>
