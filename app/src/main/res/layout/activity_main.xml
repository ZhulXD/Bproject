<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Title Bar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:fontFamily="monospace"
        android:text="@string/app_title"
        android:textColor="#00FF41"
        android:textSize="20sp"
        android:letterSpacing="0.1"/>

    <!-- Main Toggle -->
    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnToggle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_inactive"
            android:fontFamily="monospace"
            android:text="@string/status_inactive"
            android:textColor="#FF3333"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Status Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- DNS Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_private_dns"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etNextDnsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222222"
                android:fontFamily="monospace"
                android:hint="@string/hint_nextdns_id"
                android:textColor="#FFFFFF"
                android:textColorHint="#444444"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:inputType="textNoSuggestions" />

            <TextView
                android:id="@+id/tvDnsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_default"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Certs Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_blocked_credentials"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvCertStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_none"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Terminal Log -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_system_log"
        android:textColor="#444444"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_ready"
            android:textColor="#00FF41"
            android:fontFamily="monospace"
            android:textSize="14sp"/>
    </ScrollView>

</LinearLayout>
